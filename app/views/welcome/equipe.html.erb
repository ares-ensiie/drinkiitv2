<%= stylesheet_link_tag "equipe" %>
<%= javascript_include_tag "welcome" %>
<%= image_tag "ajax-loader.gif", class:"wait" %>

<div class="container">
  <div id="team" class="row">
    <div class="col s12">
      <ul class="tabs">
      <% @teams.each do |team| %> 
        <li class="tab col s3"><a href=<%= "\##{team["year"]}" %> ><%= team["year"] %></a></li>
      <% end %>
      </ul>
    </div>
  </div>
</div>

<div id="content" class="container background hoverable">
<% @teams.each do |team| %>
  <div id=<%= "#{team["year"]}" %> class="col s12">
    <div id="main">
      <ul>
        <% team["team"].each do |member| %>
        <li><%= image_tag "#{member["image"]}" %>
        <span><%= member["name"] %></span>       
        </li>
        <% end %>  
        <br>  
      </ul>
    </div>  
  </div>
<% end %>
</div>